<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开票申请"
            android:textSize="@dimen/customer_whole_text_larger" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/customer_whole_margin_top"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开票申请编号:"
                android:textSize="@dimen/customer_whole_text_larger" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开票2016-02-A222"
                android:layout_marginLeft="@dimen/customer_whole_margin_left"
                android:textSize="@dimen/customer_whole_text_normal" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/customer_whole_margin_top"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开票日期"
                android:textSize="@dimen/customer_whole_text_normal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017年02月18日00:40:02"
                android:layout_marginLeft="@dimen/customer_whole_margin_left"
                android:textSize="@dimen/customer_whole_text_normal" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款金额(元)"
            android:textSize="@dimen/customer_whole_text_normal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78222.00"
            android:textSize="@dimen/customer_whole_text_normal" />
    </LinearLayout>



</RelativeLayout>
