<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="活动总结"
    android:fadeScrollbars="true"
    android:fillViewport="true"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        '
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_summary_height"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/activitySummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_summary_mar_left1"
                    android:text="公司名称" />

                <com.yunqi.fengle.ui.view.UnderLineTextNewPlanEx
                    android:id="@+id/tvCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_summary_txt_size" />
            </LinearLayout>

            <View
                android:layout_width="0.01mm"
                android:layout_height="match_parent"
                android:background="@color/line_bg" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.01mm"
            android:background="@color/line_bg" />


        <LinearLayout
            android:id="@+id/llTime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_summary_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/activitySummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_summary_mar_left1"
                android:gravity="center_vertical"
                android:text="拜访时间" />

            <com.yunqi.fengle.ui.view.UnderLineTextNewPlanEx
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请选择拜访时间"
                android:textSize="@dimen/activity_summary_txt_size" />
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.01mm"
            android:background="@color/line_bg" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_summary_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/activitySummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_summary_mar_left1"
                android:gravity="center_vertical"
                android:text="拜访理由" />

            <com.yunqi.fengle.ui.view.UnderLineEditNewPlanEx
                android:id="@+id/etReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入拜访理由"
                android:textSize="@dimen/activity_summary_txt_size" />
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.01mm"
            android:background="@color/line_bg" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_summary_height"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/llClientName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/activitySummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_summary_mar_left1"
                    android:text="业务员" />

                <com.yunqi.fengle.ui.view.UnderLineTextNewPlanEx
                    android:id="@+id/tvSale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_summary_txt_size" />
            </LinearLayout>

            <View
                android:layout_width="0.01mm"
                android:layout_height="match_parent"
                android:background="@color/line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/activitySummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_summary_mar_left1"
                    android:text="责任人" />

                <com.yunqi.fengle.ui.view.UnderLineEditNewPlanEx
                    android:id="@+id/tvContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入责任人"
                    android:textSize="@dimen/activity_summary_txt_size" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.01mm"
            android:background="@color/line_bg" />

        <LinearLayout
            android:id="@+id/llStatus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_summary_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/activitySummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_summary_mar_left1"
                android:gravity="center_vertical"
                android:text="状态" />

            <com.yunqi.fengle.ui.view.UnderLineTextNewPlanEx
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请选择状态"
                android:textSize="@dimen/activity_summary_txt_size" />
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.01mm"
            android:background="@color/line_bg" />
    </LinearLayout>


</ScrollView>
