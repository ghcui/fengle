<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="客户拜访"
    android:orientation="vertical"
    android:padding="@dimen/visiting_padding_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/visiting_padding_txt"
                android:paddingTop="@dimen/visiting_padding_txt"
                android:text="公司名称" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/visiting_margin_normal_txt"

                android:text="阿里巴巴" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/visiting_margin_larger_txt"
                android:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/visiting_margin_larger_txt"
                android:text="责任人" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/visiting_margin_normal_txt"
                android:text="张三" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拜访时间" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/visiting_margin_normal_txt"
                android:text="2017-02-17" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/visiting_padding_txt"
            android:paddingTop="@dimen/visiting_padding_txt"
            android:text="拜访理由" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/visiting_margin_normal_txt"
            android:text="理由" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/visiting_padding_txt"
            android:paddingTop="@dimen/visiting_padding_txt"
            android:text="业务员" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/visiting_margin_larger_txt"
            android:paddingBottom="@dimen/visiting_padding_txt"
            android:paddingTop="@dimen/visiting_padding_txt"
            android:text="张三" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingBottom="@dimen/visiting_padding_txt"
            android:paddingTop="@dimen/visiting_padding_txt"
            android:text="联系人" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/visiting_margin_larger_txt"
            android:paddingBottom="@dimen/visiting_padding_txt"
            android:paddingTop="@dimen/visiting_padding_txt"
            android:text="张三" />

    </LinearLayout>

</LinearLayout>
