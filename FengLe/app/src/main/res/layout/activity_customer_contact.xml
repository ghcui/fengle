<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_color2"
                android:paddingBottom="8dp"
                android:paddingLeft="@dimen/common_left_margin"
                android:paddingTop="8dp"
                android:text="@string/basic_info" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="16dp"
                    android:paddingLeft="@dimen/common_left_margin"
                    android:paddingTop="16dp"
                    android:text="@string/tag_customer_name" />

                <TextView
                    android:id="@+id/custom_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="33dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/white"
                    android:paddingBottom="16dp"
                    android:paddingLeft="@dimen/common_left_margin"
                    android:paddingTop="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/diver_coloer" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="16dp"
                    android:paddingLeft="@dimen/common_left_margin"
                    android:paddingTop="16dp"
                    android:text="@string/tag_current_delivery" />

                <TextView
                    android:id="@+id/current_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="@color/white"
                    android:paddingBottom="16dp"
                    android:paddingLeft="@dimen/common_left_margin"
                    android:paddingTop="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/diver_coloer" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="16dp"
                    android:paddingLeft="@dimen/common_left_margin"
                    android:paddingTop="16dp"
                    android:text="@string/tag_current_payment" />

                <TextView
                    android:id="@+id/current_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="@color/white"
                    android:paddingBottom="16dp"
                    android:paddingLeft="@dimen/common_left_margin"
                    android:paddingTop="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/diver_coloer" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="16dp"
                    android:paddingLeft="@dimen/common_left_margin"
                    android:paddingTop="16dp"
                    android:text="@string/tag_trust_rate" />

                <TextView
                    android:id="@+id/trust_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="@color/white"
                    android:paddingBottom="16dp"
                    android:paddingLeft="@dimen/common_left_margin"
                    android:paddingTop="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/diver_coloer" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="16dp"
                    android:paddingLeft="@dimen/common_left_margin"
                    android:paddingTop="16dp"
                    android:text="@string/tag_real_rate" />

                <TextView
                    android:id="@+id/real_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="@color/white"
                    android:paddingBottom="16dp"
                    android:paddingLeft="@dimen/common_left_margin"
                    android:paddingTop="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/diver_coloer" />
        </LinearLayout>


    </ScrollView>

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar" />


</LinearLayout>


