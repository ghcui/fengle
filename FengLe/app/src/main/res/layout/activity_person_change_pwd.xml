<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_bg"
        android:orientation="vertical"

        android:paddingTop="@dimen/person_padding_top">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/person_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/person_padding_left"
            android:gravity="center">

            <TextView
                android:id="@+id/tvBasicInfo"
                style="@style/personTxtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="原始密码" />

            <EditText
                android:id="@+id/etOldPwd"
                style="@style/personTxtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:layout_marginLeft="5dp"
                android:inputType="textPassword"
                android:lines="1" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/person_line" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:background="@color/person_line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/person_padding_left"
            android:gravity="center">

            <TextView
                style="@style/personTxtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="新密码" />

            <EditText
                android:id="@+id/etNewPwd"
                style="@style/personTxtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLength="20"
                android:layout_marginLeft="5dp"
                android:lines="1" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/person_line" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:background="@color/person_line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/person_padding_left"
            android:gravity="center">

            <TextView
                style="@style/personTxtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="确认密码" />

            <EditText
                android:id="@+id/etConfirmPwd"
                style="@style/personTxtStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:layout_marginLeft="5dp"
                android:inputType="textPassword"
                android:lines="1" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/person_line" />

    </LinearLayout>


</LinearLayout>


