<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingBottom="15dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
            android:id="@+id/llContent"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_border_black"
            android:padding="8dp"
            android:layout_marginRight="3dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color_normal"
                android:textSize="@dimen/text_normal_size"
                android:text="李四"/>

            <TextView
                android:id="@+id/tvDaily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color_normal"
                android:textSize="@dimen/text_normal_size"
                android:layout_marginTop="5dp"
                android:text="今天拜访XXX公司" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff585757"
                android:textSize="@dimen/text_small_size"
                android:layout_marginTop="5dp"
                android:text="2017-03-15 16:07:52"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_border_black"
            android:padding="8dp"
            android:layout_marginLeft="3dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color_normal"
                android:textSize="@dimen/text_normal_size"
                android:text="完成情况"/>
            <TextView
                android:id="@+id/tvReason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff979797"
                android:textSize="@dimen/text_normal_size"
                android:layout_marginTop="5dp"
                android:text="未完成原因"/>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_edit"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/ivFocus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@id/ivEdit"
            android:layout_marginRight="7dp"
            android:background="@drawable/icon_focus"/>
    </RelativeLayout>

</LinearLayout>
