<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="#d5d4d6" />
            <stroke android:color="#bdbbbb" />
        </shape>
    </item>

    <!--<color name="color_name">#d5d4d6</color>-->

    <item android:drawable="@color/light_green" android:state_checked="true" android:state_enabled="true"/>
    <item android:drawable="@color/white" android:state_checked="false" android:state_enabled="true" />


    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="#51c240" />
            <stroke android:color="#bdbbbb" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke android:color="#bdbbbb" />
        </shape>
    </item>
</selector>
